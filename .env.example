# JARVIS AI Assistant - Environment Configuration

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =============================================================================
# LLM APIs
# =============================================================================
# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-YOUR_KEY_HERE
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048

# Anthropic Claude API Key (https://console.anthropic.com/)
CLAUDE_API_KEY=sk-ant-YOUR_KEY_HERE
CLAUDE_MODEL=claude-3-opus-20240229

# Use local models (optional)
USE_LOCAL_LLM=false
LOCAL_MODEL_PATH=/models/llama2

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jarvis
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=jarvis

# MongoDB
MONGO_URI=mongodb://localhost:27017/jarvis
MONGO_USER=admin
MONGO_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# AI FEATURES
# =============================================================================
ENABLE_VOICE=true
ENABLE_FACE_RECOGNITION=true
ENABLE_EMOTION_DETECTION=true
ENABLE_LEARNING=true
ENABLE_THINKING=true
ENABLE_TASK_EXECUTION=true

# Speech Recognition
SPEECH_PROVIDER=google  # google, azure, openai
GOOGLE_CLOUD_API_KEY=

# Text-to-Speech
TTS_PROVIDER=google  # google, azure, openai

# Face Recognition
FACE_RECOGNITION_THRESHOLD=0.6
EMOTION_DETECTION_THRESHOLD=0.7

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# FRONTEND
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_APP_NAME=JARVIS

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Weather API
WEATHER_API_KEY=

# Email Service
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Integration APIs
SLACK_API_TOKEN=
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=

# =============================================================================
# STORAGE
# =============================================================================
# S3 or local storage for uploads
STORAGE_TYPE=local  # local or s3
UPLOAD_DIR=./uploads

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=jarvis-ai
AWS_REGION=us-east-1

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=
LOG_FILE=/var/log/jarvis/app.log
PROMETHEUS_METRICS=true

# =============================================================================
# DEVELOPMENT
# =============================================================================
HOT_RELOAD=true
MOCK_RESPONSES=false
SIMULATE_VOICE=false
